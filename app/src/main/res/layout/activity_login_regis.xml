<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginRegisActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Creat an Account"
        android:fontFamily="@font/semibold"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="50dp"
        android:textColor="#C6000000"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="75dp"
        android:text="Discipline is an important thing"
        android:textColor="#5D4CC6"
        android:textSize="35dp"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/semibold"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_marginLeft="-160dp"
        android:layout_marginTop="190dp"
        android:layout_marginRight="-150dp"
        android:src="@drawable/regislogin" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="615dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/white"
        android:text="Login"
        android:fontFamily="@font/semibold"
        android:onClick="loginregis1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="680dp"
        android:text="Already an Acc?"
        android:gravity="center"
        android:layout_marginRight="60dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="680dp"
        android:text="Register"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft="100dp"
        android:onClick="loginregis2"/>

</RelativeLayout>